<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardView_home_container"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_image"
                android:scaleType="centerCrop"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/common_poster" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_Rating"
                        android:textColor="@color/black"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        app:drawableStartCompat="@drawable/ic_baseline_star_24" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_Place"
                        android:textColor="@color/red"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView_Movie"
                    android:text="@string/inTheaterItem_movieTitle"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView_Votes"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView_MetaCritic"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_comingSoonGenres"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_releaseState"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView_Crew"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textAlignment="center" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_Plot"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textSize="16sp"
            android:textAlignment="textStart" />
    </LinearLayout>
</androidx.cardview.widget.CardView>